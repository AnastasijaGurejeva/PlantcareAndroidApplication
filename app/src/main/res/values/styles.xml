<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <!-- Customize your theme here. -->
    <style name="CustomToolBar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@color/colorAccent</item>
        <item name="actionDropDownStyle">@color/colorAccent</item>
        <item name="android:icon">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>

    
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>
